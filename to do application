# To Do application 
def greet(name):
    print("Welcome! " + name)
greet('isabel')


def game_player(player):
    try:
        game_mode = int(input("pick your mode "
                              "(0 - Easy | 1 - Soldier | 2 - Legendary)"))
        result = 100 / game_mode
        
    except ZeroDivisionError:
        print("Ready!")
    except ValueError:
        print("invalid option try again!")
    else:
        print(f"you win!")
    finally:
        print("game over!")



#main menu 
user_input = 0 
while user_input != 2:
    print('''
    \nMain menu
    1. Pick a player
    2. Exit
''')
    try:
        user_input = int(input("please choose one (1 or 2):"))
    except ValueError:
        print("oops, please choose an option")
    
    if user_input == 1:
        try:
            player_name = input("enter your player (Luigi or Mario)".lower())
    
            if not player_name.strip():
                raise ValueError("must make a choice")
        except ValueError as e:
            print(e)
        else:
            game_player(player_name)
    elif user_input == 2:
        print("Game over!")
    else:
        ("oops try again")
        



